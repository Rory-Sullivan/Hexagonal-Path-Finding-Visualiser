{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "rules": {
    "no-unused-vars": "warn",
    "import/extensions": ["error", "always"],
    "no-param-reassign": "off"
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "env": {
        "mocha": true
      },
      "globals": {
        "expect": "readonly"
      },
      "rules": {
          "func-names": "off",
          "prefer-arrow-callback": "off"
       }
    }
  ]
}
